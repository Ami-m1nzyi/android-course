<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/formula_image"
        android:layout_width="693dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Формула уравнения"
        android:scaleType="fitCenter"
        android:src="@drawable/formula" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:stretchColumns="1">

        <TableRow android:padding="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Введите a:  "
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/input_a"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:autofillHints="none"
                android:background="@drawable/rounded_corners"
                android:hint="Значение a"
                android:inputType="numberDecimal|numberSigned"
                android:padding="10dp"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow android:padding="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Введите b:  "
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/input_b"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:autofillHints="none"
                android:background="@drawable/rounded_corners"
                android:hint="Значение b"
                android:inputType="numberDecimal|numberSigned"
                android:padding="10dp"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow android:padding="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Введите x:  "
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/input_x"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:autofillHints="none"
                android:background="@drawable/rounded_corners"
                android:hint="Значение x"
                android:inputType="numberDecimal|numberSigned"
                android:padding="10dp"
                android:textColor="@android:color/black" />
        </TableRow>
    </TableLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/solve_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:text="решить"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:padding="16dp"
        android:text="Ответ отобразится здесь"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</LinearLayout>